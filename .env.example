# ===== DB =====
DB_DSN=postgres://rss:rss@db:5432/rss?sslmode=disable

# ===== Telegram =====
TELEGRAM_BOT_TOKEN=

# ===== Logging =====
LOG_LEVEL=info
LOG_FORMAT=text        # text|json
LOG_ADD_SOURCE=false   # true|false

# ===== HTTP Server =====
HTTP_ADDR=:8080
HTTP_READ_TIMEOUT=5s
HTTP_WRITE_TIMEOUT=10s
HTTP_IDLE_TIMEOUT=60s

# ===== RSSD Scheduler =====
RSS_SCHEDULE_TICK=5s
RSS_FETCH_BATCH=50
FETCH_TIMEOUT=20s

# ===== Delivery =====
DELIVERY_WORKERS=4

# Telegram delivery rate limit
TELEGRAM_RPS=5
TELEGRAM_BURST=10

# ===== Retry =====
RETRY_SCHEDULE_TICK=5s
RETRY_BATCH=200
RETRY_BASE=2s
RETRY_MAX=2m
RETRY_MAX_ATTEMPTS=8
